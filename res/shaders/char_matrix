// ==================
#vert
#version 330 core

layout(location = 0) in vec4 data[2];

out vec2 tc;
flat out vec4 tclr;

void main() {
	gl_Position = vec4(data[0].xy, 0, 1);
	tc = data[0].zw;
	tclr = data[1];
}

#end
// ==================
#frag
#version 330 core

uniform sampler2D tex;

in vec2 tc;
flat in vec4 tclr;

out vec4 ret;

void main() {
	ret = vec4(tclr.rgb, tclr.a * texture(tex, tc).r);
}

#end
